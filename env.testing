# ========================================
# MUSICALO - Configuración para Testing
# ========================================
# Este archivo contiene las variables de entorno para la versión de pruebas
# Copia este archivo como .env.testing en tu servidor

# ========================================
# TELEGRAM BOT (TESTING) - ¡MUY IMPORTANTE!
# ========================================
# DEBES CREAR UN BOT DE TELEGRAM SEPARADO PARA PRUEBAS
# 1. Habla con @BotFather en Telegram
# 2. Usa /newbot para crear un nuevo bot (ej: "MusicaloTestBot")
# 3. Copia el token aquí:
TELEGRAM_BOT_TOKEN_TESTING=

# Webhook URL para testing (si usas webhooks)
# Ejemplo: https://testing.tudominio.com/webhook
TELEGRAM_WEBHOOK_URL_TESTING=

# ========================================
# NAVIDROME (Puede usar el mismo que producción)
# ========================================
NAVIDROME_URL=http://tu-servidor-navidrome:4533
NAVIDROME_USERNAME=admin
NAVIDROME_PASSWORD=tu_password

# ========================================
# LISTENBRAINZ (Puede usar el mismo que producción)
# ========================================
LISTENBRAINZ_USERNAME=tu_usuario
LISTENBRAINZ_TOKEN=tu_token

# ========================================
# LAST.FM (Puede usar el mismo que producción)
# ========================================
LASTFM_API_KEY=tu_api_key
LASTFM_USERNAME=tu_usuario

# ========================================
# GEMINI AI (Puede usar la misma API key que producción)
# ========================================
GEMINI_API_KEY=tu_gemini_api_key

# ========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ========================================
DEBUG=True
HOST=0.0.0.0
PORT=8000

# ========================================
# NOTAS IMPORTANTES
# ========================================
# - El bot de testing correrá en el puerto 8001 (mapeado desde 8000 interno)
# - DEBE usar un token de Telegram DIFERENTE al de producción
# - Puedes compartir las credenciales de Navidrome, Last.fm y Gemini
# - Los logs se guardarán en un volumen separado (logs-testing)

