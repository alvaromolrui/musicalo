# Musicalo - Configuración
# Este archivo sirve tanto para Docker como para instalación manual

# ============================================================================
# Navidrome Configuration
# ============================================================================
# Para Docker: usa host.docker.internal
# Para instalación local: usa localhost
NAVIDROME_URL=http://host.docker.internal:4533
NAVIDROME_USERNAME=admin
NAVIDROME_PASSWORD=password

# ============================================================================
# ListenBrainz Configuration (REQUERIDO para datos de escucha)
# ============================================================================
# ListenBrainz es open source y sin límites de API
# Registra tu usuario en: https://listenbrainz.org
LISTENBRAINZ_USERNAME=your_listenbrainz_username
# Token opcional pero recomendado (para scrobbling desde el bot en el futuro)
LISTENBRAINZ_TOKEN=your_listenbrainz_token

# ============================================================================
# MusicBrainz (RECOMENDADO - para descubrimiento y metadatos)
# ============================================================================
# Habilita metadatos detallados, descubrimiento de artistas similares,
# y búsquedas específicas como "indie español de los 2000"
ENABLE_MUSICBRAINZ=true

# Información de contacto (requerida por MusicBrainz)
APP_NAME=MusicaloBot
CONTACT_EMAIL=your_email@example.com

# Configuración de búsqueda
# Batch size: Cuántos artistas verificar por consulta
# Valores: 15 (rápido ~17seg), 20 (equilibrado ~22seg), 30 (completo ~33seg)
MUSICBRAINZ_BATCH_SIZE=20

# Máximo total de artistas a verificar (limita "busca más")
MUSICBRAINZ_MAX_TOTAL=100

# Máximo de releases a obtener del comando /releases
# Valores: 500 (rápido), 2000 (default), 5000 (completo pero lento)
MUSICBRAINZ_MAX_RELEASES=2000

# ============================================================================
# Gemini AI Configuration (REQUERIDO)
# ============================================================================
# Obtén tu API key gratis en: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# ============================================================================
# Telegram Bot Configuration (REQUERIDO)
# ============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Control de acceso (IMPORTANTE para seguridad)
# Obtén tu ID con @userinfobot en Telegram
# Ejemplos:
#   Un solo usuario: TELEGRAM_ALLOWED_USER_IDS=123456789
#   Múltiples usuarios: TELEGRAM_ALLOWED_USER_IDS=123456789,987654321
# Dejar vacío = bot público (NO RECOMENDADO)
TELEGRAM_ALLOWED_USER_IDS=

# Administradores del bot (para comando /analytics)
# Ejemplos:
#   Un solo admin: TELEGRAM_ADMIN_USER_IDS=123456789
#   Múltiples admins: TELEGRAM_ADMIN_USER_IDS=123456789,987654321
TELEGRAM_ADMIN_USER_IDS=

# ============================================================================
# Redis Configuration (OPCIONAL - para caché distribuido)
# ============================================================================
# URL de conexión a Redis (se configura automáticamente en Docker)
REDIS_URL=redis://redis:6379/0

# TTL por defecto para caché en segundos (1 hora)
REDIS_CACHE_TTL=3600

# ============================================================================
# Analytics Configuration (OPCIONAL)
# ============================================================================
# Habilitar sistema de analytics y métricas
ENABLE_ANALYTICS=true

# Días de retención de datos de analytics (30 días por defecto)
ANALYTICS_RETENTION_DAYS=30

# ============================================================================
# Adaptive Learning Configuration (OPCIONAL)
# ============================================================================
# Habilitar sistema de aprendizaje adaptativo
ENABLE_ADAPTIVE_LEARNING=true

# Tasa de aprendizaje para preferencias (0.1 = 10% por interacción)
LEARNING_RATE=0.1

# Tasa de decaimiento para preferencias no utilizadas (0.01 = 1% por día)
DECAY_RATE=0.01

# ============================================================================
# Hybrid Recommendation Engine Configuration (OPCIONAL)
# ============================================================================
# Habilitar motor de recomendaciones híbridas
ENABLE_HYBRID_ENGINE=true

# Pesos por defecto para estrategias de recomendación (0.0-1.0)
HYBRID_COLLABORATIVE_WEIGHT=0.3
HYBRID_CONTENT_BASED_WEIGHT=0.25
HYBRID_POPULARITY_WEIGHT=0.2
HYBRID_RECENCY_WEIGHT=0.15
HYBRID_DIVERSITY_WEIGHT=0.1

# ============================================================================
# Advanced Personalization Configuration (OPCIONAL)
# ============================================================================
# Habilitar sistema de personalización avanzada
ENABLE_ADVANCED_PERSONALIZATION=true

# Umbral mínimo para mostrar rasgos de personalidad (0.0-1.0)
PERSONALITY_TRAIT_THRESHOLD=0.3

# Número máximo de contextos a analizar
MAX_CONTEXTUAL_CONTEXTS=7

# ============================================================================
# Error Recovery System Configuration (OPCIONAL)
# ============================================================================
# Habilitar sistema de recuperación de errores
ENABLE_ERROR_RECOVERY=true

# Umbral de fallos para circuit breaker (por defecto: 5)
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5

# Tiempo de recuperación del circuit breaker en segundos (por defecto: 60)
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# ============================================================================
# Advanced Monitoring Configuration (OPCIONAL)
# ============================================================================
# Habilitar sistema de monitoreo avanzado
ENABLE_ADVANCED_MONITORING=true

# Intervalo de recolección de métricas en segundos (por defecto: 60)
MONITORING_COLLECTION_INTERVAL=60

# ============================================================================
# User Features Configuration (OPCIONAL)
# ============================================================================
# Habilitar características adicionales de usuario
ENABLE_USER_FEATURES=true

# Habilitar sistema de gamificación
ENABLE_GAMIFICATION=true

# Habilitar sistema de descubrimiento musical
ENABLE_MUSIC_DISCOVERY=true