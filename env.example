# Musicalo - Configuración
# Este archivo sirve tanto para Docker como para instalación manual

# ============================================================================
# Navidrome Configuration
# ============================================================================
# Para Docker: usa host.docker.internal
# Para instalación local: usa localhost
NAVIDROME_URL=http://host.docker.internal:4533
NAVIDROME_USERNAME=admin
NAVIDROME_PASSWORD=password

# ============================================================================
# Servicios de Scrobbling (elige uno o ambos)
# ============================================================================

# ListenBrainz (open source, recomendado)
LISTENBRAINZ_USERNAME=your_listenbrainz_username
LISTENBRAINZ_TOKEN=your_listenbrainz_token

# Last.fm (alternativa, requiere API key)
LASTFM_API_KEY=your_lastfm_api_key
LASTFM_USERNAME=your_lastfm_username

# ============================================================================
# MusicBrainz (OPCIONAL - mejora precisión de búsquedas)
# ============================================================================
# Habilita verificación de metadatos con MusicBrainz
# Útil para búsquedas específicas como "indie español de los 2000"
ENABLE_MUSICBRAINZ=true

# Información de contacto (requerida por MusicBrainz)
APP_NAME=MusicaloBot
CONTACT_EMAIL=your_email@example.com

# Configuración de búsqueda
# Batch size: Cuántos artistas verificar por consulta
# Valores: 15 (rápido ~17seg), 20 (equilibrado ~22seg), 30 (completo ~33seg)
MUSICBRAINZ_BATCH_SIZE=20

# Máximo total de artistas a verificar (limita "busca más")
MUSICBRAINZ_MAX_TOTAL=100

# Máximo de releases a obtener del comando /releases
# Valores: 500 (rápido), 2000 (default), 5000 (completo pero lento)
MUSICBRAINZ_MAX_RELEASES=2000

# ============================================================================
# Gemini AI Configuration (REQUERIDO)
# ============================================================================
# Obtén tu API key gratis en: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# ============================================================================
# Telegram Bot Configuration (REQUERIDO)
# ============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Control de acceso (IMPORTANTE para seguridad)
# Obtén tu ID con @userinfobot en Telegram
# Ejemplos:
#   Un solo usuario: TELEGRAM_ALLOWED_USER_IDS=123456789
#   Múltiples usuarios: TELEGRAM_ALLOWED_USER_IDS=123456789,987654321
# Dejar vacío = bot público (NO RECOMENDADO)
TELEGRAM_ALLOWED_USER_IDS=
