# Music Assistant - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# Telegram Bot Configuration (REQUIRED)
# ============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ALLOWED_USERS=123456789,987654321  # Comma-separated user IDs

# ============================================================================
# Navidrome Configuration (REQUIRED)
# ============================================================================
NAVIDROME_URL=http://host.docker.internal:4533
NAVIDROME_USERNAME=admin
NAVIDROME_PASSWORD=your_navidrome_password

# ============================================================================
# ListenBrainz Configuration (REQUIRED)
# ============================================================================
LISTENBRAINZ_TOKEN=your_listenbrainz_token
LISTENBRAINZ_USERNAME=your_listenbrainz_username

# ============================================================================
# PostgreSQL Configuration (REQUIRED)
# ============================================================================
POSTGRES_PASSWORD=your_secure_postgres_password

# ============================================================================
# Ollama Configuration (OPTIONAL - defaults provided)
# ============================================================================
OLLAMA_MODEL=qwen2.5:3b
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ============================================================================
# Application Configuration (OPTIONAL - defaults provided)
# ============================================================================
SYNC_INTERVAL=3600  # Seconds between library syncs
LOG_LEVEL=INFO      # DEBUG, INFO, WARNING, ERROR
